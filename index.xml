    <script>
      async function detectUserName() {
        const greetingEl = document.getElementById('greeting');
        try {
          const response = await fetch('https://ipapi.co/json/');
          const data = await response.json();
          const name = data?.org || 'User';
          greetingEl.textContent = `Hi, ${name}! Enjoy secure streaming.`;
        } catch (error) {
          greetingEl.textContent = 'Hi, User! Enjoy secure streaming.';
        }
      }

      function toggleDarkMode() {
        const body = document.getElementById('mainBody');
        body.classList.toggle('light-mode');
      }

      detectUserName();

      function handleProxyRequest() {
        const url = document.getElementById("videoUrl").value;
        const country = document.getElementById("vpnCountry").value;
        const progressBar = document.getElementById("progressBar");
        const progressContainer = document.querySelector(".progress-bar-container");

        if (!url || !isValidUrl(url)) {
          alert("Please enter a valid video URL.");
          return;
        }

        if (!country) {
          alert("Please select a VPN country.");
          return;
        }

        const button = document.querySelector("button");
        button.disabled = true;
        button.innerText = "Buffering...";

        progressContainer.style.display = "block";

        let progress = 0;
        const interval = setInterval(() => {
          progress += 10;
          progressBar.style.width = `${progress}%`;
          if (progress >= 100) {
            clearInterval(interval);
            setTimeout(() => {
              alert(`Streaming video via ${country} VPN...`);
              button.innerHTML = `<svg xmlns='http://www.w3.org/2000/svg' class='h-5 w-5' fill='none' viewBox='0 0 24 24' stroke='currentColor'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M14.752 11.168l-5.197-3.027A1 1 0 008 9.027v5.946a1 1 0 001.555.832l5.197-3.027a1 1 0 000-1.664z' /></svg> Stream Video`;
              button.disabled = false;
            }, 1000);
          }
        }, 200);

        setTimeout(() => {
          progressContainer.style.display = "none";
        }, 5000);
      }

      function isValidUrl(url) {
        const pattern = /^(https?:\/\/[^\s$.?#].[^\s]*)$/i;
        return pattern.test(url);
      }
    </script>
